{
  "rewrites": [
    {
      "source": "/images/(.*)",
      "destination": "/src/images/$1"
    },
    {
      "source": "/(.*)\\.(js|css)",
      "destination": "/src/$1.$2"
    },
    {
      "source": "/",
      "destination": "/src/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/src/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|gif|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
